{
  "name": "create-tw",
  "version": "1.1.2",
  "description": "CLI tool to create TailwindCSS projects using already existing scaffolding tools like create-next or create-vite",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AndrejJurkin/create-tw"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-tw": "./dist/index.js"
  },
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --sourcemap --minify --metafile",
    "dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "vitest",
    "release": "standard-version",
    "publish:beta": "npm run build && npm publish --tag beta",
    "publish": " npm run build && npm publish",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "tailwindcss",
    "nextjs",
    "scaffold",
    "react",
    "html",
    "css"
  ],
  "author": "Andrej Jurkin",
  "license": "MIT",
  "dependencies": {
    "chalk": "5.0.1",
    "commander": "^9.5.0",
    "create-svelte": "^2.3.4",
    "dotenv": "^16.0.3",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.1.4",
    "ora": "6.1.1",
    "recast": "^0.21.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@swc/core": "^1.3.35",
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^9.0.13",
    "@types/gradient-string": "^1.1.2",
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "execa": "^6.1.0",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "vitest": "^0.21.1"
  }
}
