{
  "name": "create-tw",
  "version": "1.1.1",
  "description": "CLI tool to create TailwindCSS projects using already existing scaffolding tools like create-next or create-vite",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AndrejJurkin/create-tw"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-tw": "./dist/index.js"
  },
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --sourcemap --minify --metafile",
    "dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "vitest",
    "release": "standard-version",
    "publish:beta": "npm run build && npm publish --tag beta",
    "publish": " npm run build && npm publish",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "build:nextjs": "cd dist && node index.js --config ../e2e/test-configs/nextjs.json",
    "test:nextjs": "npx playwright test nextjs.spec.ts",
    "build:react": "cd dist && node index.js --config ../e2e/test-configs/react.json",
    "test:react": "npx playwright test react.spec.ts --update-snapshots"
  },
  "keywords": [
    "tailwindcss",
    "nextjs",
    "scaffold",
    "react",
    "html",
    "css"
  ],
  "author": "Andrej Jurkin",
  "license": "MIT",
  "dependencies": {
    "chalk": "5.0.1",
    "commander": "^9.3.0",
    "create-svelte": "^2.0.0-next.152",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "gradient-string": "^2.0.1",
    "inquirer": "^9.0.0",
    "ora": "6.1.1",
    "recast": "^0.21.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.27.0",
    "@swc/core": "^1.2.206",
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.13",
    "@types/gradient-string": "^1.1.2",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "execa": "^6.1.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4",
    "vitest": "^0.21.0"
  }
}
